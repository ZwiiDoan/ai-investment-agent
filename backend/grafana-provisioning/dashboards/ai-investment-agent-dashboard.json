{
  "id": null,
  "title": "AI Investment Agent Metrics",
  "tags": ["ai", "fastapi", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "/ai/query Latency (seconds)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(ai_query_time_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 latency",
          "interval": ""
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "LLM Response Time (seconds)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(ai_llm_query_time_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 LLM latency",
          "interval": ""
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "type": "stat",
      "title": "Document Retrieval Count",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(api_search_requests_total)",
          "legendFormat": "search requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {"h": 4, "w": 24, "x": 0, "y": 8}
    }
  ]
}
